@model List<CategoryViewModel>

<h1 class="text-center">Categories</h1>
<div class="d-flex mt-5 mb-5 justify-content-between">
    <a class="btn btn-outline-primary" asp-action="AddCategory" role="button">Add Category</a>
</div>

<table class="table table-striped indextable">
    <thead>
        <tr>
            <th scope="col">Id </th>
            <th scope="col">CategoryName</th>
            <th scope="col">Description</th>
            <th scope="col">CreatedDate</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td scope="row">@item.Id</td>
                <td scope="row">@item.CategoryName</td>
                <td scope="row">@item.Description</td>
                <td scope="row">@item.CreatedDate</td>
                <td scope="row"><button type="submit" class="btn btn-outline-primary" style="margin-right: 10px" onclick="window.location = '@Url.Action("UpdateCategory", "Category", new { categoryId = item.Id })'">Update</button></td>
                <td scope="row"><button type="submit" class="btn btn-outline-danger" onclick="location.href='@Url.Action("RemoveCategory", "Category", new { Id = item.Id })'">Remove</button></td>
            </tr>
        }
    </tbody>
</table>
