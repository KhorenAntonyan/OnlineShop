@model List<ProductViewModel>

<h1 class="text-center">Production</h1>
<div class="d-flex mt-5 mb-5 justify-content-between">
    <a class="btn btn-outline-primary" asp-action="AddProduct" role="button">Add Product</a>
</div>

<table class="table table-striped indextable">
    <thead>
        <tr>
            <th scope="col">ProductId </th>
            <th scope="col">ProductName</th>
            <th scope="col">Description</th>
            <th scope="col">Quantity</th>
            <th scope="col">Price</th>
            <th scope="col">CreatedDate</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td scope="row">@item.ProductId</td>
                <td scope="row">@item.ProductName</td>
                <td scope="row">@item.Description</td>
                <td scope="row">@item.Quantity</td>
                <td scope="row">@item.Price</td>
                <td scope="row">@item.CreatedDate</td>
                <td scope="row"><button type="submit" class="btn btn-primary" style="margin-right: 10px" onclick="location.href='@Url.Action("RemoveProduct", "Product", new { productId = item.ProductId })'">Update</button></td>
                <td scope="row"><button type="submit" class="btn btn-danger" onclick="location.href='@Url.Action("RemoveProduct", "Product", new { productId = item.ProductId })'">Remove</button></td>
            </tr>
        }
    </tbody>
</table>

