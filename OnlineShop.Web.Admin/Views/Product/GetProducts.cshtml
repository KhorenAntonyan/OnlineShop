@model ProductViewModel

<div id="Modal"></div>

<h1 class="text-center">Production</h1>

<div class="mt-3">
    <div class="float-start">
        <a class="btn btn-outline-primary mb-3 addModal" href="/Product/AddProduct"><i class="fa-solid fa-plus fas"></i>Add Product</a>
    </div>
    <div class="float-end">
        <input class="form-control" id="Search" type="search" placeholder="Search">
    </div>
</div>

<div style="margin-top:7%;">
    <partial name="_ProductFilterForm" />

    <div class="btn-group float-end mb-3">
        <button type="button" class="btn btn-outline-primary mt-5" data-bs-toggle="dropdown" aria-expanded="false" style="border:none;"><i class="fa-solid fa-arrow-down-short-wide fas"></i>Sort by</button>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="/Product/ProductSorting?sortingBy=price">Price</a></li>
            <li><a class="dropdown-item" href="/Product/ProductSorting?sortingBy=quantity">Quantity</a></li>
            <li><a class="dropdown-item" href="/Product/ProductSorting?sortingBy=createdDate">Created Date</a></li>
            <li><hr class="dropdown-divider"></li>
            <li><a class="dropdown-item" href="/Product/ProductSorting?sortingBy=reset"><i class="fa-solid fa-trash fas"></i>Reset</a></li>
        </ul>
    </div>
</div>



<div class="tableFixHead" style="width:100%;">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Product photo </th>
                <th scope="col">Product id </th>
                <th scope="col">Product name</th>
                <th scope="col">Category name</th>
                <th scope="col">Description</th>
                <th scope="col">Quantity</th>
                <th scope="col">Price</th>
                <th scope="col">Created date</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody id="ListPartial">
            @await Component.InvokeAsync("ProductList", Model.ProductList)
        </tbody>
    </table>
</div>
