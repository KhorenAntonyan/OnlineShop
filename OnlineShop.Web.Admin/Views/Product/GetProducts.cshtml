@model List<GetProductViewModel>

<div id="Modal"></div>

<h1 class="text-center">Production</h1>
<div class="container mt-3">
    <div class="col-6" style="float:left;">
        <a class="btn btn-outline-primary mb-3 addModal" href="/Product/AddProduct" style=""><i class="fa-solid fa-plus fas"></i>Add Product</a>
    </div>
    <div class="col-3" style="float:right;">
        <input class="form-control" id="Search" type="search" placeholder="Search">
    </div>
</div>


<div class="tableFixHead" style="width:100%;">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">ProductPhoto </th>
                <th scope="col">ProductId </th>
                <th scope="col">ProductName</th>
                <th scope="col">CategoryName</th>
                <th scope="col">Description</th>
                <th scope="col">Quantity</th>
                <th scope="col">Price</th>
                <th scope="col">CreatedDate</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="Search">
                    <td scope="row">
                        @foreach (var photo in item.Photos)
                        {
                            if (photo.IsMain == true)
                            {
                                <img style="width:100%; height:80px;" src='@Url.Content("~/img/" + photo.PhotoURL)' />
                            }
                        }
                    </td>
                    <td scope="row">@item.Id</td>
                    <td scope="row">@item.ProductName</td>
                    <td scope="row">@item.CategoryName</td>
                    <td scope="row">@item.Description</td>
                    <td scope="row">@item.Quantity</td>
                    <td scope="row">@item.Price</td>
                    <td scope="row">@item.CreatedDate</td>
                    <td scope="row"><button type="submit" class="btn btn-outline-primary" style="margin-right: 10px" onclick="location.href='@Url.Action("UpdateProduct", "Product", new { productId = item.Id })'"><i class="fa-solid fa-pen fas p-0"></i></button></td>
                    <td scope="row"><button class="btn btn-outline-danger mb-3 deleteModal" data-id="@item.Id" href="/Product/DeleteProduct"><i class="fa-solid fa-trash fas p-0"></i></button></td>
                </tr>
            }
        </tbody>
    </table>
</div>
