@model DeleteProductViewModel

<div class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Are you sure you want to delete this product?</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="DeleteProduct">
                    <input class="hiddenId" type="hidden" asp-for="Id">
                    <div class="col-4 m-auto mt-3">
                        <button type="submit" class="btn btn-primary">Delete</button>
                        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cansel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

