@model RegisterViewModel


<form class="col-5 mx-auto mt-5" method="post" asp-controller="Auth" asp-action="LoginAsync">
    <h2 class="text-center">Вход</h2>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label for="exampleInputEmail1" class="form-label" asp-for="Email">Email address</label>
        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" asp-for="Email">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1" class="form-label" asp-for="Password">Password</label>
        <input type="password" class="form-control" id="exampleInputPassword1" asp-for="Password">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
     <div class="form-group">
        <label for="exampleInputPassword1" class="form-label" asp-for="ConfirmPassword">ConfirmPassword</label>
        <input type="password" class="form-control" id="exampleInputPassword1" asp-for="ConfirmPassword">
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-primary">Регистрация</button>
    </div>
</form>
