<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/twitter-bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Navbar</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav mb-2">
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" asp-controller="Product" asp-action="Product">Product</a>
                        </li>
                        @*  <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" role="button" aria-expanded="false" data-bs-toggle="dropdown" asp-controller="Product" asp-action="Product">
                            Product
                            </a>
                            <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="Product" asp-action="AddProduct">Add Product</a></li>
                            </ul>
                            </li>*@
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" asp-controller="Category" asp-action="Category">Category</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        @RenderBody()
    </div>




    <script src="~/lib/twitter-bootstrap/js/bootstrap.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
