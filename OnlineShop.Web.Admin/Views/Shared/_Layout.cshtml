<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @*    <link rel="stylesheet" href="~/lib/twitter-bootstrap/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />*@
    <environment include="Development">
        <link rel="stylesheet" href="~/bootstrap/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/bootstrap/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.min.css" />
    </environment>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Navbar</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav mb-2">
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" asp-controller="Product" asp-action="Product">Product</a>
                        </li>
                        @*  <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" role="button" aria-expanded="false" data-bs-toggle="dropdown" asp-controller="Product" asp-action="Product">
                            Product
                            </a>
                            <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="Product" asp-action="AddProduct">Add Product</a></li>
                            </ul>
                            </li>*@
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" asp-controller="Category" asp-action="Category">Category</a>
                        </li>


                    </ul>
                    @if(User.Identity.IsAuthenticated)
{
    <p>@User.Identity.Name</p>
 
    <form method="post" asp-controller="Account" asp-action="Logout">
        <input type="submit" value="Выход" />
    </form>
}
else
{
    <a asp-controller="Account" asp-action="Login">Вход</a>
    <a asp-controller="Account" asp-action="Register">Регистрация</a>
};
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        @if (TempData["message"] != null)
        {
            <div class="alert alert-success">@TempData ["message"]</div>
        }
        @RenderBody()
    </div>




    <script src="~/bootstrap/js/bootstrap.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
